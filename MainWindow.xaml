<Window x:Class="WpfHello.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfHello"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas>
        <Button x:Name="setNameButton" Content="Set Name" HorizontalAlignment="Left" Margin="100,100,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Button x:Name="retNameButton" Content="Ret Name" HorizontalAlignment="Left" Margin="100,180,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>
        <TextBox x:Name="inputUsernameTextBox" HorizontalAlignment="Left" Height="23" Margin="235,100,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="inputUsernameTextBox_TextChanged"/>
        <Label x:Name="welcomeLabel" Content="" HorizontalAlignment="Left" Margin="235,177,0,0" VerticalAlignment="Top"/>
        <Button Canvas.Left="10" Canvas.Top="10" Content="Click me" Height="23" Width="75" Name="showDateTimeButton"
                Click="showDateTimeButton_Click"/>
        <TextBox Width="110" Canvas.Left="90" Canvas.Top="12" Name="dateTimeTextBox"/>

    </Canvas>
</Window>
